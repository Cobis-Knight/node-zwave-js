// tsconfig for building - only applies to the src directory
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"jsx": "react-jsx",
		"module": "Node16",
		"moduleResolution": "node16"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["src/**/*.test.ts"]
}
